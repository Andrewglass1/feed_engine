      -if @authentications.find_by_provider('instagram')
        td = link_to ' Remove This Authentication', @authentications.find_by_provider('instagram'), confirm: 'Are you sure?', method: :delete
      -else
        td = link_to "Instegrate Your Instagram", "/auth/instagram"


